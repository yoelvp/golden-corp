---
import type { HTMLTag, Polymorphic } from 'astro/types'

type Props<Tag extends HTMLTag> = Polymorphic<{
  as: Tag
  className?: string
  isUppercase?: boolean
}>

const {
  as: Tag,
  className = "",
  isUppercase = true,
  ...props
} = Astro.props
---

<Tag
  class="heading font-bold text-2xl md:text-3xl 2xl:text-4xl"
  class:list={[
    className,
    { "uppercase": isUppercase }
  ]}
  {...props}
  tabindex="0"
>
  <slot />
</Tag>
